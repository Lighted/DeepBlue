<?xml version="1.0" encoding="utf-8" ?>   
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
	<!-- 默认时的背景图片--> 
	
	<!-- 没有焦点时的背景图片 -->  
	<item android:state_pressed="false"
	    android:drawable="@drawable/table_unpress_bg">
	</item>
	 
	<!-- 非触摸模式下获得焦点并单击时的背景图片 -->  
	<item android:state_pressed="true" android:drawable="@drawable/table_press_bg">
	</item>
	
	<!-- 触摸模式下单击时的背景图片-->  
	<item android:state_focused="true" android:drawable="@drawable/table_press_bg">
	</item> 

</selector>










